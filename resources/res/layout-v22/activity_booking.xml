<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/b1" android:background="@color/back" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/bi" android:layout_width="match_parent" android:layout_height="250dp" android:src="@drawable/cars" android:scaleType="centerCrop"/>
    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="Fill Up your Details" android:fontFamily="@font/adamina"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/customerName" android:background="@drawable/button_bg" android:padding="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="25dp" android:layout_marginEnd="20dp" android:backgroundTint="@color/white">
        <ImageView android:layout_gravity="center" android:layout_width="22dp" android:layout_height="23dp" android:src="@drawable/user" android:layout_marginStart="10dp" app:tint="@color/dark"/>
        <EditText android:textSize="16sp" android:textColor="@color/black" android:textColorHint="#b6c1ce" android:layout_gravity="center" android:id="@+id/customer" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter your name" android:cursorVisible="true" android:ems="10" android:inputType="textEmailAddress" android:textCursorDrawable="@null" android:paddingStart="5dp" android:layout_marginStart="10dp" android:layout_marginEnd="55dp" android:autofillHints="name"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/button_bg" android:padding="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="25dp" android:layout_marginEnd="20dp" android:backgroundTint="@color/white">
        <ImageView android:layout_gravity="center" android:layout_width="22dp" android:layout_height="23dp" android:src="@drawable/ic_baseline_directions_bike_24" android:layout_marginStart="10dp" app:tint="@color/dark"/>
        <EditText android:textSize="16sp" android:textColor="@color/black" android:textColorHint="#b6c1ce" android:layout_gravity="center" android:id="@+id/vehicleNumber" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter your vehicle number" android:cursorVisible="true" android:ems="10" android:inputType="text" android:textCursorDrawable="@null" android:paddingStart="5dp" android:layout_marginStart="10dp" android:layout_marginEnd="55dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/button_bg" android:padding="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="25dp" android:layout_marginEnd="20dp" android:backgroundTint="@color/white">
        <ImageView android:layout_gravity="center" android:layout_width="22dp" android:layout_height="23dp" android:src="@drawable/phone" android:layout_marginStart="10dp" app:tint="@color/dark"/>
        <EditText android:textSize="16sp" android:textColor="@color/black" android:textColorHint="#b6c1ce" android:layout_gravity="center" android:id="@+id/phoneNumber" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter your mobile number" android:cursorVisible="true" android:ems="10" android:inputType="number" android:textCursorDrawable="@null" android:paddingStart="5dp" android:layout_marginStart="10dp" android:layout_marginEnd="55dp" android:autofillHints="phone"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="25dp" android:layout_marginEnd="20dp">
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/inTime" android:background="@drawable/button_bg" android:layout_width="0dp" android:layout_height="wrap_content" android:text="⏰ Select In time" android:layout_weight="1" android:textAllCaps="false" android:fontFamily="@font/inter" android:layout_marginEnd="5dp"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/outTime" android:background="@drawable/button_bg" android:layout_width="0dp" android:layout_height="wrap_content" android:text="⏰ Select Out time" android:layout_weight="1" android:textAllCaps="false" android:fontFamily="@font/inter" android:layout_marginStart="5dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="25dp" android:layout_marginEnd="20dp">
        <LinearLayout android:orientation="horizontal" android:background="@drawable/button_bg" android:padding="1dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="4" android:backgroundTint="@color/white">
            <ImageView android:layout_gravity="center" android:layout_width="22dp" android:layout_height="23dp" android:src="@drawable/clock" android:layout_marginStart="10dp" app:tint="@color/dark"/>
            <EditText android:textSize="16sp" android:textColor="@color/black" android:textColorHint="#b6c1ce" android:layout_gravity="center" android:id="@+id/duration" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter duration of parking" android:cursorVisible="true" android:ems="10" android:inputType="number" android:textCursorDrawable="@null" android:paddingStart="5dp" android:layout_marginStart="10dp" android:layout_marginEnd="55dp"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/date" android:background="@drawable/button_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="�� Select date" android:layout_weight="1" android:textAllCaps="false" android:fontFamily="@font/inter" android:layout_marginStart="5dp"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton android:id="@+id/book" android:background="@drawable/button_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="Book slot" android:textAllCaps="false" android:fontFamily="@font/inter" android:layout_marginStart="25dp" android:layout_marginEnd="20dp"/>
</LinearLayout>
