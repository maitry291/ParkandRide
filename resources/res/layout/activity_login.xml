<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/back" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/logo" android:layout_width="match_parent" android:layout_height="250dp" android:src="@drawable/park" android:scaleType="centerCrop" android:layout_alignParentTop="true"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/logo" android:layout_centerInParent="true">
        <RelativeLayout android:id="@+id/relative" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="@dimen/cardview_compat_inset_shadow">
            <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/text" android:id="@+id/appName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="Log In" android:layout_centerHorizontal="true" android:fontFamily="@font/adamina" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
            <TextView android:textStyle="bold" android:textColor="@color/text" android:id="@+id/tv_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="Email ID : " android:layout_below="@+id/appName" android:fontFamily="@font/adamina" android:layout_marginStart="27dp"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/email_view" android:background="@drawable/box" android:padding="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/tv_email" android:layout_centerHorizontal="true" android:layout_marginStart="25dp" android:layout_marginEnd="20dp" android:backgroundTint="@color/white">
                <ImageView android:layout_gravity="center" android:id="@+id/imageView" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginStart="10dp" app:srcCompat="@drawable/email" app:tint="@color/dark"/>
                <EditText android:textSize="16sp" android:textColor="@color/black" android:textColorHint="#b6c1ce" android:layout_gravity="center" android:id="@+id/email_id" android:background="@null" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter your email" android:cursorVisible="true" android:ems="10" android:inputType="textEmailAddress" android:textCursorDrawable="@null" android:paddingStart="5dp" android:layout_marginStart="10dp" android:layout_marginEnd="55dp"/>
            </LinearLayout>
            <TextView android:textStyle="bold" android:textColor="@color/text" android:id="@+id/tv_password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="Password : " android:layout_below="@+id/email_view" android:fontFamily="@font/adamina" android:layout_marginStart="27dp"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/password" android:background="@drawable/box" android:padding="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/tv_password" android:layout_centerHorizontal="true" android:layout_marginStart="25dp" android:layout_marginEnd="20dp" android:backgroundTint="@color/white">
                <ImageView android:layout_gravity="center" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginStart="10dp" app:srcCompat="@drawable/password" app:tint="@color/dark"/>
                <EditText android:textSize="16sp" android:textColor="@color/black" android:textColorHint="#b6c1ce" android:layout_gravity="center" android:id="@+id/password_login" android:background="@null" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter your password" android:cursorVisible="true" android:ems="10" android:inputType="textPassword" android:textCursorDrawable="@null" android:paddingStart="5dp" android:layout_marginStart="10dp" android:layout_marginEnd="55dp"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton android:textSize="15sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/logIn1" android:background="@drawable/button_bg" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="34dp" android:layout_marginBottom="20dp" android:text="Log In" android:layout_below="@+id/password" android:layout_centerHorizontal="true" android:textAllCaps="false" android:fontFamily="@font/inter" android:layout_marginStart="70dp" android:layout_marginEnd="70dp" android:layout_alignParentStart="false" android:layout_alignParentEnd="false" android:elevation="@dimen/cardview_compat_inset_shadow"/>
        </RelativeLayout>
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/progress_login" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:layout_below="@+id/relative" app:lottie_autoPlay="true" app:lottie_loop="true" app:lottie_rawRes="@raw/l1"/>
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/progress_login" android:layout_centerHorizontal="true">
            <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Don&apos;t have an Account?"/>
            <TextView android:textColor="@color/text" android:gravity="center" android:id="@+id/signUp" android:background="?android:attr/selectableItemBackground" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/sign_up_here" android:paddingStart="5dp" android:paddingEnd="5dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
